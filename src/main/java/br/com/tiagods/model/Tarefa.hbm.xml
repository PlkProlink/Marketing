<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<!-- Tiago Dias
-->
<hibernate-mapping package="br.com.tiagods.model">
	<class name="Tarefa" table="TAREFA">
	<id name="id" column="TAR_COD" type="int">
	<generator class="sequence">
		<param name="sequence">TAREFA_TAR_COD_SEQUENCE</param>
	</generator>
	</id>
	<property name="nome" column="TAR_NOME" type="text"/>
	<property name="dataEvento" column="TAR_DATAEVENTO" type="date"/>
	<property name="horaEvento" column="TAR_HORAEVENTO" type="time"/>
	<property name="classe" column="TAR_CLASSE" length="100"/>
	<property name="criadoEm" column="TAR_CRIADOEM" type="timestamp"/>
	
	<many-to-one name="criadoPor" column="TAR_CRIADOPOR" />
	<many-to-one name="tipoTarefa" column="TAR_TIPOTAREFA" />
	<many-to-one name="atendente" column="TAR_ATENDENTE" />
	<many-to-one name="pessoa" column="TAR_PESSOA" />
	<many-to-one name="empresa" column="TAR_EMPRESA" />
	<many-to-one name="negocio" column="TAR_NEGOCIO" />
	
	</class>
</hibernate-mapping>

