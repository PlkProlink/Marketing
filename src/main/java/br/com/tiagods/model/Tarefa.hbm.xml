<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- Tiago Dias
-->
<hibernate-mapping package="br.com.tiagods.model">
	<class name="Tarefa" table="TAREFA">
	<id name="id" column="TAR_COD" type="int">
	<generator class="identity" />
	</id>
	<property name="descricao" column="TAR_NOME" type="text"/>
	<property name="dataEvento" column="TAR_DATAEVENTO" type="date"/>
	<property name="horaEvento" column="TAR_HORAEVENTO" type="time"/>
	<property name="classe" column="TAR_CLASSE" length="100"/>
	<property name="criadoEm" column="TAR_CRIADOEM" type="timestamp"/>
	
	<many-to-one name="criadoPor" column="TAR_CRIADOPOR_COD" foreign-key="FK_TAR_CRIADOPOR_COD"/>
	<many-to-one name="tipoTarefa" column="TAR_TIP_TAR_COD" foreign-key="FK_TAR_TIP_TAR_COD" />
	<many-to-one name="atendente" column="TAR_ATENDENTE_COD" foreign-key="FK_TAR_ATENDENTE_COD"/>
	<many-to-one name="pessoa" column="TAR_PESSOA_COD" foreign-key="FK_TAR_PESSOA_COD"/>
	<many-to-one name="empresa" column="TAR_EMPRESA_COD" foreign-key="FK_TAR_EMPRESA_COD"/>
	<many-to-one name="negocio" column="TAR_NEGOCIO_COD" foreign-key="FK_TAR_NEGOCIO_COD"/>
	
	</class>
</hibernate-mapping>

